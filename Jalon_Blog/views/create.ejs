<!DOCTYPE html>
<html>
  <%include header.ejs%>
  <style>
    .content-box {width: 1000px;}
  </style>
  <body>
    <%include navbar.ejs%>
    <!--页面主体-->
    <div class="container content-box">
        <form class="form-horizontal" method="POST" action="/create/add">
            <div class="form-group text-center">
                <h4>发布新文章</h4>
            </div>
            <div class="form-group">
                <label for="title" class="col-sm-1 control-label">Title</label>
                <div class="col-sm-11">
                    <input type="text" class="form-control" id="title" placeholder="标题">
                </div>
            </div>
            <div class="form-group">
                <label for="author" class="col-sm-1 control-label">作者</label>
                <div class="col-sm-11">
                    <input type="text" class="form-control" id="author" placeholder="作者">
                </div>
            </div>
            <div class="form-group">
                <label for="description" class="col-sm-1 control-label">描述</label>
                <div class="col-sm-11">
                    <input type="text" class="form-control" id="description" placeholder="文章描述">
                </div>
            </div>
            <div class="form-group">
                <label for="content" class="col-sm-1 control-label">正文</label>
                <div class="col-sm-11">
                    <textarea class="form-control" rows="20"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-1 col-sm-5">
                    <button type="submit" class="btn btn-default success" id="publish">发布新文章</button>
                </div>
            </div>
        </form>
    </div>
  </body>
</html>