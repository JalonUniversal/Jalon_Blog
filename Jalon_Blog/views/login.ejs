<!DOCTYPE html>
<html>
  <%include header.ejs%>
  <style>
    html,body {height: 100%;}
    body {
      display: flex;
      align-items: center;
      height: 100%;
    }
    .login-box{
      padding: 40px 20px 10px 20px;
      border: 1px solid #d7d7d7;
      border-radius: 7px;
    }
  </style>
  <body>
    <!--页面主体-->
    <div class="container">
      <div class="row">
        <div class="col-md-4 text-center col-md-offset-4 login-box">
            <form class="form-horizontal" method="POST" action="/auth/login">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-3 control-label">邮 箱</label>
                    <div class="col-sm-9">
                    <input type="email" class="form-control" id="inputEmail3" placeholder="邮箱" name="email">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-3 control-label">密 码</label>
                    <div class="col-sm-9">
                    <input type="password" class="form-control" id="inputPassword3" placeholder="密码" name="password">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-1 col-sm-10">
                    <div class="checkbox">
                        <label>
                        <input type="checkbox" name="rememberStatus"> 记住登录状态
                        </label>
                    </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-1 col-sm-10">
                        <button type="submit" class="btn btn-default" href="/">登录</button>
                    </div>
                </div>
            </form>
        </div>
      </div>
    </div>
  </body>
</html>
